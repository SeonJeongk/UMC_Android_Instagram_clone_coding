<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/my_profile_cl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20sp"
        android:layout_marginEnd="20sp"
        android:layout_marginTop="20sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/my_top_cl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent">
            <TextView
                android:id="@+id/my_username_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="username"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
            <ImageView
                android:id="@+id/my_dropdown_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_dropdown"
                android:layout_marginStart="8sp"
                app:layout_constraintTop_toTopOf="@id/my_username_tv"
                app:layout_constraintBottom_toBottomOf="@id/my_username_tv"
                app:layout_constraintStart_toEndOf="@id/my_username_tv"/>
            <ImageView
                android:id="@+id/my_add_iv"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:src="@drawable/ic_add"
                android:layout_marginEnd="25sp"
                app:layout_constraintTop_toTopOf="@id/my_username_tv"
                app:layout_constraintBottom_toBottomOf="@id/my_username_tv"
                app:layout_constraintEnd_toStartOf="@id/my_burger_iv"/>
            <ImageView
                android:id="@+id/my_burger_iv"
                android:layout_width="25sp"
                android:layout_height="25sp"
                android:src="@drawable/ic_burger"
                app:layout_constraintTop_toTopOf="@id/my_username_tv"
                app:layout_constraintBottom_toBottomOf="@id/my_username_tv"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/my_mid_cl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            app:layout_constraintTop_toBottomOf="@id/my_top_cl"
            app:layout_constraintStart_toStartOf="parent">
            <ImageView
                android:id="@+id/my_profile_image_iv"
                android:layout_width="80sp"
                android:layout_height="80sp"
                android:src="@drawable/my_story_blank"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="80sp"
                android:layout_marginStart="15sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/my_profile_image_iv"
                app:layout_constraintEnd_toEndOf="parent"
                android:weightSum="3">
                <LinearLayout
                    android:id="@+id/my_post_ll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical">
                <TextView
                    android:id="@+id/my_post_num_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_gravity="center"/>
                <TextView
                    android:id="@+id/my_post_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="게시물"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_gravity="center"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/my_follower_ll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical">
                    <TextView
                        android:id="@+id/my_follower_num_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_gravity="center"/>
                    <TextView
                        android:id="@+id/my_follower_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="팔로워"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_gravity="center"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/my_following_ll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical">
                    <TextView
                        android:id="@+id/my_following_num_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_gravity="center"/>
                    <TextView
                        android:id="@+id/my_following_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="팔로잉"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_gravity="center"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <TextView
            android:id="@+id/my_username2_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="username"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginTop="5sp"
            app:layout_constraintTop_toBottomOf="@id/my_mid_cl"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:id="@+id/my_introduction_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="소개"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:layout_marginTop="5sp"
            app:layout_constraintTop_toBottomOf="@id/my_username2_tv"
            app:layout_constraintStart_toStartOf="@id/my_username2_tv"/>
        <LinearLayout
            android:id="@+id/my_profile_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15sp"
            app:layout_constraintTop_toBottomOf="@id/my_introduction_tv"
            app:layout_constraintStart_toStartOf="parent">
            <TextView
                android:id="@+id/my_profile_edit_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/my_btn_background"
                android:text="프로필 편집"
                android:textSize="11sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:paddingLeft="53sp"
                android:paddingRight="53sp"
                android:paddingTop="10sp"
                android:paddingBottom="10sp"/>
            <TextView
                android:id="@+id/my_profile_share_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/my_btn_background"
                android:text="프로필 공유"
                android:textSize="11sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:paddingLeft="53sp"
                android:paddingRight="53sp"
                android:paddingTop="10sp"
                android:paddingBottom="10sp"
                android:layout_marginStart="8sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/my_btn_background"
                android:textSize="11sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:paddingLeft="30sp"
                android:paddingRight="30sp"
                android:paddingTop="10sp"
                android:paddingBottom="10sp"
                android:layout_marginStart="8sp"/>
        </LinearLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15sp"
            app:layout_constraintTop_toBottomOf="@id/my_profile_ll"
            app:layout_constraintStart_toStartOf="parent">
            <TextView
                android:id="@+id/my_highlight_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="스토리 하이라이트"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="12sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
            <TextView
                android:id="@+id/my_highlight2_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="좋아하는 스토리를 프로필에 보관해보세요"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:layout_marginTop="5sp"
                app:layout_constraintTop_toBottomOf="@id/my_highlight_tv"
                app:layout_constraintStart_toStartOf="parent"/>
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8sp"
                app:layout_constraintTop_toBottomOf="@id/my_highlight2_tv"
                app:layout_constraintStart_toStartOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="60sp"
                            android:layout_height="60sp"
                            android:src="@drawable/my_story_add"
                            android:layout_gravity="center"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="신규"
                            android:textColor="@color/black"
                            android:textSize="10sp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="15sp">
                        <ImageView
                            android:layout_width="60sp"
                            android:layout_height="60sp"
                            android:src="@drawable/my_story_blank"
                            android:layout_gravity="center"
                            app:tint="@color/main_light_gray"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textColor="@color/black"
                            android:textSize="10sp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="15sp">
                        <ImageView
                            android:layout_width="60sp"
                            android:layout_height="60sp"
                            android:src="@drawable/my_story_blank"
                            android:layout_gravity="center"
                            app:tint="@color/main_light_gray"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textColor="@color/black"
                            android:textSize="10sp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="15sp">
                        <ImageView
                            android:layout_width="60sp"
                            android:layout_height="60sp"
                            android:src="@drawable/my_story_blank"
                            android:layout_gravity="center"
                            app:tint="@color/main_light_gray"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textColor="@color/black"
                            android:textSize="10sp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="15sp">
                        <ImageView
                            android:layout_width="60sp"
                            android:layout_height="60sp"
                            android:src="@drawable/my_story_blank"
                            android:layout_gravity="center"
                            app:tint="@color/main_light_gray"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textColor="@color/black"
                            android:textSize="10sp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="15sp">
                        <ImageView
                            android:layout_width="60sp"
                            android:layout_height="60sp"
                            android:src="@drawable/my_story_blank"
                            android:layout_gravity="center"
                            app:tint="@color/main_light_gray"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textColor="@color/black"
                            android:textSize="10sp"/>
                    </LinearLayout>

                </LinearLayout>

            </HorizontalScrollView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/my_content_tb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabIndicatorFullWidth="true"
        app:tabSelectedTextColor="@color/black"
        app:tabIndicatorColor="@color/black"
        app:tabRippleColor="#00ff0000"
        android:background="@color/white"
        android:layout_marginTop="10sp"
        app:layout_constraintTop_toBottomOf="@id/my_profile_cl"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/my_content_vp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/my_content_tb"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>