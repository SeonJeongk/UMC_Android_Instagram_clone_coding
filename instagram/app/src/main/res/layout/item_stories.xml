<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/item_stories_border_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/item_stories_border_new_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/home_story_border_color"
            android:visibility="visible"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ImageView
            android:id="@+id/item_stories_border_old_iv"
            android:layout_width="71dp"
            android:layout_height="71dp"
            android:src="@drawable/home_story_border_gray"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/item_stories_profile_iv"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/post_abata_img"
        app:layout_constraintTop_toTopOf="@id/item_stories_border_layout"
        app:layout_constraintStart_toStartOf="@id/item_stories_border_layout"
        app:layout_constraintEnd_toEndOf="@id/item_stories_border_layout"
        app:layout_constraintBottom_toBottomOf="@id/item_stories_border_layout"/>

    <TextView
        android:id="@+id/item_stories_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="profile_name"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/item_stories_profile_iv"
        app:layout_constraintStart_toStartOf="@id/item_stories_profile_iv"
        app:layout_constraintEnd_toEndOf="@id/item_stories_profile_iv"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>